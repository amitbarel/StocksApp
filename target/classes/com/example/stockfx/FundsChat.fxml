<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="240.0" spacing="6.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.FundsChatController">
   <children>
      <Label alignment="CENTER" prefHeight="39.0" prefWidth="120.0" style="-fx-font-weight: bold;" text="Add funds" underline="true">
         <font>
            <Font size="23.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="32.0" prefWidth="136.0" spacing="5.0" VBox.vgrow="NEVER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="26.0" prefWidth="85.0" style="-fx-font-weight: bold;" text="Balance:" />
            <Label fx:id="fundsLabel" alignment="CENTER" prefHeight="26.0" prefWidth="96.0" text="default" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <HBox alignment="CENTER" prefHeight="29.0" prefWidth="179.0" spacing="5.0">
         <children>
            <TextField fx:id="amount" alignment="CENTER" prefHeight="26.0" prefWidth="124.0" promptText="Enter amount" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="\$">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <Button fx:id="AddFundsBtn" mnemonicParsing="false" onMouseClicked="#AddFunds" text="Add" />
   </children>
   <padding>
      <Insets left="30.0" right="30.0" />
   </padding>
</VBox>
